@import 'variables';
@import 'mixins';

html,
body {
  width: 100%;
  height: 100%;
  background-color: $primary-color;
  font-family: $font_pt;
}

h2 {
  font-size: $fnt36;
}

p {
  font-size: $fnt14;
}

h1,
h2,
h3,
h4,
h5,
p {
  margin: 0;
  padding: 0;
}

ul {
  margin: 0;
  padding: 0;
}

ul li {
  list-style: none;
}

a,
a:hover,
a:focus {
  text-decoration: none;
}

.wrapper {
  @include fullWidth(100%, left);
  position: relative;
  overflow: visible;

}

.container.cstm-container {
  max-width: $container_max_wdth;
  padding: 0 48px;
  // padding-top: 150px;
}

section {
  @include fullWidth(100%, left);
}